---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import killData from '../data/data.json';

// Read data but don't do time calculations
const totalKills = killData.meta.count || 0;

function normalizePlayerName(name) {
  if (!name) return name;
  
  // Replace non-breaking spaces and other whitespace characters with regular spaces
  return name
    .replace(/\u00A0/g, ' ')  // Non-breaking space
    .replace(/\u2007/g, ' ')  // Figure space
    .replace(/\u202F/g, ' ')  // Narrow non-breaking space
    .replace(/\u3000/g, ' ')  // Ideographic space
    .replace(/\s+/g, ' ')     // Multiple spaces to single space
    .trim();
}

// Process unique players for initial render (static data only)
const playerBestKills = {};
killData.records.forEach(record => {
  const playerName = record.members[0]?.name || 'Unknown';
  const normalizedName = normalizePlayerName(playerName);
  
  // Use normalized name as key for deduplication
  if (!playerBestKills[normalizedName] || record.enrage > playerBestKills[normalizedName].enrage) {
    playerBestKills[normalizedName] = {
      ...record,
      playerName: normalizedName  // Store normalized name
    };
  }
});

const topPlayers = Object.values(playerBestKills)
  .sort((a, b) => b.enrage - a.enrage)
  .slice(0, 15);

const latestKills = [...killData.records]
  .sort((a, b) => b.timeOfKill - a.timeOfKill)
  .slice(0, 5);

const uniquePlayersCount = Object.keys(playerBestKills).length;

// Get highest enrage (static)
const highestEnrage = killData.records.length > 0 
  ? Math.max(...killData.records.map(r => r.enrage))
  : 0;

// Prepare data for client-side
const pageData = {
  killData,
  totalKills,
  highestEnrage,
  topPlayers,
  latestKills,
  uniquePlayersCount,
  playerBestKills
};
