          const killDate = record.timeOfKill;
          
          let enrageClass = 'font-bold ';
            if (enragePercent >= 55000){ enrageClass += 'text-red-900 dark:text-red-800';}       // 55-60k: Dark red
            else if (enragePercent >= 50000) {enrageClass += 'text-red-800 dark:text-red-700';}       // 50-55k: Darker red
            else if (enragePercent >= 45000) {enrageClass += 'text-red-700 dark:text-red-500';}       // 45-50k: Crimson
